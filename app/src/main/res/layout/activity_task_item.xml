<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskItem"
    >

    <TextView
        android:id="@+id/nameTask"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/contentTask"
        app:layout_constraintLeft_toRightOf="@+id/nameTask"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="110dp"
        android:layout_marginLeft="10dp"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp" />

    <ImageButton
        app:layout_constraintLeft_toRightOf="@+id/contentTask"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/editTaskItem"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="@android:drawable/ic_menu_edit"
        android:text="+" />

    <ImageButton
        android:background="@android:drawable/ic_menu_delete"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/editTaskItem"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/deleteTaskItem"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="x" />

</androidx.constraintlayout.widget.ConstraintLayout>